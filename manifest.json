{
"update_url": "https://clients2.google.com/service/update2/crx",

	"manifest_version": 2,

	"name": "BrowserAutomationTools",
	"short_name": "BAT",
	"author": "Jared Gillis",
	"description": "A collection of tools to automate web interactions.",
	"version": "1.0",

	"icons": {
		"16": "assets/icon16.png",
		"128": "assets/icon128.png"
	},
	
	"background": {
		"scripts": [
			"background.js"
		],
		"persistent": true
	},
	
	"options_page": "options.html",
	
	"browser_action": {
		"default_icon": "assets/icon128.png",
		"default_popup": "popup.html",
		"default_title": "BrowserAutomationTools"
	},
	
	"permissions": [
		"tabs",
		"<all_urls>",
		"storage",
		"webRequest",
		"contextMenus"
	]
}